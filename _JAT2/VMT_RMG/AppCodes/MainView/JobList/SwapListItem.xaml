                    <TextBlock x:Name="contNo" TextWrapping="Wrap" Text="AWSU1234567" Margin="22,3.5,0,3.5" Foreground="{DynamicResource TextBox_Foreground_3}" FontFamily="/VMT_RTG;component/Fonts/#Neo Sans Pro" FontSize="21" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <TextBlock x:Name="cntrTp" TextWrapping="Wrap" Text="GE" Margin="267,3.5,0,3.5" Foreground="{DynamicResource TextBox_Foreground_3}" FontFamily="/VMT_RTG;component/Fonts/#Neo Sans Pro" FontSize="21" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="33*"/>
                        <ColumnDefinition Width="170*"/>
                    </Grid.ColumnDefinitions>
