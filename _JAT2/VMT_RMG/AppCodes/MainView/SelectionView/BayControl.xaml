<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="VMT_RMG.BayControl"
	x:Name="UserControl"
	d:DesignWidth="220" d:DesignHeight="84" Width="143" Height="84" Focusable="True">

    <Grid x:Name="LayoutRoot">
        <Border x:Name="Border_BG" BorderThickness="2" Background="DimGray">
            <Grid x:Name="Grid_Inner" Margin="8,3">
                <Grid x:Name="Grid_BlockName">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="TextBlock_BayName" TextAlignment="Center" Margin="0,11,0,0" TextWrapping="Wrap" Text="01" FontFamily="/VMT_RTG;component/Fonts/#Neo Sans Pro Medium" FontSize="16" Foreground="White" Grid.Row="0"/>
                    <TextBlock x:Name="TextBlock_CategoryName" Margin="0,8,2.381,0" TextWrapping="Wrap" Text="S" FontFamily="/VMT_RTG;component/Fonts/#Neo Sans Pro Medium" FontSize="16" Foreground="White" TextAlignment="Center" Grid.Row="1"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>