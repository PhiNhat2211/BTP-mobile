<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VMT_YT.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="KeepAlive Testing"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                x:Name="Lbl_KeepAliveData"
                Text=""
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="KeepAlive Data"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="Btn_Call"
                Text="Call API"
                SemanticProperties.Hint="Call API"
                Clicked="Btn_Call_Clicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
