<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="VMT_ITV.UnlinkItem"
	x:Name="UserControl"
	d:DesignWidth="147" d:DesignHeight="126" Width="150" Height="95">

    <Grid>
        <Grid x:Name="Grid_UnlinkItem" Margin="4" Background="DimGray" MouseLeave="Grid_UnlinkItem_MouseLeave" MouseLeftButtonDown="Grid_UnlinkItem_MouseLeftButtonDown" MouseLeftButtonUp="Grid_UnlinkItem_MouseLeftButtonUp">
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="64*"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="TextBlock_UnlinkItem" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" FontFamily="/VMT_ITV;component/Fonts/#Neo Sans Pro Medium" Foreground="White" TextAlignment="Center" Margin="0,15,0,14" Grid.Row="1" Width="112"/>
        </Grid>
        <Border BorderThickness="2" Margin="2" BorderBrush="DarkGray" Width="146" Height="91"/>
    </Grid>


</UserControl>